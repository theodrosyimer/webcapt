{
  "display": "Node LTS",
  "_version": "20.1.0",
  "compilerOptions": {
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16"
  },
  "include": ["src", "vitest.config.ts", "eslint.config.js", "prettier.config.js", "tests"],
  "exclude": ["node_modules", "dist"]
}
